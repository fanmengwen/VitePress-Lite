{
  "name": "api-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:watch": "tsc --watch",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node test-api.js",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "lint": "echo 'Linting not configured for api-server'",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:sync": "npx tsx prisma/sync-docs.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.1.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "jest": "^26.6.3",
    "prisma": "^5.9.1",
    "supertest": "^6.3.4",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^2.0.0",
    "tsx": "^3.14.0",
    "typescript": "~4.9.5"
  }
}
